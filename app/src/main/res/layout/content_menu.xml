<android.support.v7.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="@dimen/default_content_margin"
    app:cardElevation="8dp"
    app:cardUseCompatPadding="true"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/menuNameTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/menuImageView"
            android:layout_marginEnd="@dimen/default_content_margin"
            android:layout_toEndOf="@+id/menuImageView"
            android:text="Menu name"
            android:textSize="20sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/menuImageView"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_margin="@dimen/default_content_margin"
            android:scaleType="centerCrop"
            android:background="@drawable/round_corners_mask"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/menuNameTextView"
            android:layout_marginEnd="@dimen/default_content_margin"
            android:layout_marginBottom="@dimen/default_content_margin"
            android:layout_toEndOf="@+id/menuImageView"
            android:layout_marginTop="@dimen/default_content_margin"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/allergen1ImageView"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:tint="@color/colorAccent"
                app:srcCompat="@drawable/alergeno_1" />

            <ImageView
                android:id="@+id/allergen2ImageView"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:tint="@color/colorAccent"
                app:srcCompat="@drawable/alergeno_1" />

        </LinearLayout>

        <TextView
            android:id="@+id/menuCreditsTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/menuImageView"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="20dp"
            android:layout_toEndOf="@+id/menuImageView"
            android:text="Credits"
            android:textAlignment="textEnd"
            android:textAllCaps="false"
            android:textSize="20sp"
            android:textStyle="bold|italic" />


    </RelativeLayout>

</android.support.v7.widget.CardView>