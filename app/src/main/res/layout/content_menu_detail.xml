<android.support.v7.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="@dimen/default_content_margin"
    app:cardElevation="8dp"
    app:cardUseCompatPadding="true"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/default_content_margin"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/menuImageView"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:scaleType="centerCrop"
                android:background="@drawable/round_corners_mask" />

            <TextView
                android:id="@+id/menuDescriptionTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/default_content_margin"
                android:layout_marginTop="@dimen/default_content_margin"
                android:text="Menu description" />

            <LinearLayout
                android:id="@+id/allergensView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/default_content_margin"
                android:layout_marginEnd="@dimen/default_content_margin"
                android:layout_marginTop="@dimen/default_content_margin"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/allergen1ImageView"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:tint="@color/colorAccent"
                    app:srcCompat="@drawable/alergeno_1" />

                <ImageView
                    android:id="@+id/allergen2ImageView"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:tint="@color/colorAccent"
                    app:srcCompat="@drawable/alergeno_1" />

            </LinearLayout>

            <TextView
                android:id="@+id/menuCreditsTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:text="Credits"
                android:textAlignment="textEnd"
                android:textAllCaps="false"
                android:textSize="20sp"
                android:textStyle="bold|italic" />

            <EditText
                android:id="@+id/menuNotesEditText"
                android:hint="Notas del menú"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </LinearLayout>

        <Button
            android:id="@+id/menuActionButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_margin="@dimen/default_content_margin"
            android:background="@color/colorAccent"
            android:text="Añadir"
            android:textColor="@android:color/white" />

    </LinearLayout>

</android.support.v7.widget.CardView>